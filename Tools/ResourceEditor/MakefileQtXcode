QT_DIR_OUTPUT := .GeneratedQt

QT_HOME := ~/QtSDK

QT_DIR_UI := DataQt
QT_DIR_QRC := DataQt
QT_DIR_MOC := Classes/Qt

QT_UI_FILES := $(wildcard $(QT_DIR_UI)/*.ui)
QT_UI_FILES_GEN := $(addprefix $(QT_DIR_OUTPUT)/ui_, $(notdir $(QT_UI_FILES:.ui=.h)))

QT_MOC_FILES := $(wildcard $(QT_DIR_MOC)/*.h)
QT_MOC_FILES_GEN := $(addprefix $(QT_DIR_OUTPUT)/moc_, $(notdir $(QT_MOC_FILES:.h=.cpp)))

QT_QRC_FILES := $(wildcard $(QT_DIR_QRC)/*.qrc)
QT_QRC_FILES_GEN := $(addprefix $(QT_DIR_OUTPUT)/qrc_, $(notdir $(QT_QRC_FILES:.qrc=.cpp)))

$(QT_DIR_OUTPUT):
	mkdir $(QT_DIR_OUTPUT)

$(QT_DIR_OUTPUT)/ui_%.h : $(QT_DIR_UI)/%.ui
	@echo $@
	@$(QT_HOME)/Desktop/Qt/4.8.1/gcc/bin/uic $< -o $@

$(QT_DIR_OUTPUT)/moc_%.cpp : $(QT_DIR_MOC)/%.h
	@echo $@
	@$(QT_HOME)/Desktop/Qt/4.8.1/gcc/bin/moc -DUNICODE -DWIN32 -D_MSC_VER=1600 -DQT_LARGEFILE_SUPPORT -DQT_DLL -DQT_GUI_LIB -DQT_CORE_LIB -DQT_HAVE_MMX -DQT_HAVE_3DNOW -DQT_HAVE_SSE -DQT_HAVE_MMXEXT -DQT_HAVE_SSE2 -DQT_THREAD_SUPPORT -I"$(QT_HOME)/Desktop/Qt/4.8.1/gcc/include/QtCore" -I"$(QT_HOME)/Desktop/Qt/4.8.1/gcc/include/QtGui" -I"$(QT_HOME)/Desktop/Qt/4.8.1/gcc/include" -I"$(QT_HOME)/Desktop/Qt/4.8.1/gcc/include/ActiveQt" -I"$(Configuration)" -I"." -I$(QT_HOME)/Desktop/Qt/4.8.1/gcc/mkspecs/default $< -o $@

$(QT_DIR_OUTPUT)/qrc_%.cpp : $(QT_DIR_QRC)/%.qrc
	@echo $@
	@$(QT_HOME)/Desktop/Qt/4.8.1/gcc/bin/rcc -name $(notdir $(basename $<)) $< -o $@

all: $(QT_DIR_OUTPUT) $(QT_UI_FILES_GEN) $(QT_MOC_FILES_GEN) $(QT_QRC_FILES_GEN)
	@echo $(QT_DIR_OUTPUT) $(QT_UI_FILES_GEN) $(QT_MOC_FILES_GEN) $(QT_QRC_FILES_GEN)